name: Notify users or teams based on issue labels

on:
  issues:
      types: [labeled]

jobs:
  notify:
    runs-on: ubuntu-latest
    steps:
        - uses: jenschelkopf/issue-label-notification-action@1.3
          with:
             recipients: |
                  ↗️ priority=@Qytera-Gmbh/qytera-devs
                  documentation=@OliverHoenig
